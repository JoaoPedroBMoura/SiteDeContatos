@model Front_End_com_ASP.NET.Models.Contato;

@{
    ViewData["Title"] = "Criar novo Contato";
}

<h1>Criar novo contato</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar"> <!--Joga para o mÃ©todo Criar na controller,--Joga que espera receber um contato-->
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
            </div>
            <br>
             <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <input type="checkbox" asp-for="Ativo" class="form-check-input" />
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary">
            </div>
            <hr/>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>